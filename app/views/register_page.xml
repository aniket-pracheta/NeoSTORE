<!-- registration page -->
<Alloy>
	<Window class="container" id="window2" >
		<Widget src="header" id="register_header"></Widget>
		<View class="to_center_child">
	<ScrollView class="scroll_view">
		
				<View class="label_container">
					<Label id="neolabel" class="gautum">NeoSTORE</Label>
				</View>
					
		       <View class="small_container-1" id="first" top="5%">
		       	    <Label text="\uf007" class="icon_in_text font-icon"></Label>
		       	    <TextField class="input gautum" hintText="First Name" id="first_name"></TextField>
		       </View>	
		       
		        <View class="small_container-1" id="second">
		        	<Label text="\uf007" class="icon_in_text font-icon"></Label>
		       	    <TextField class="input gautum" hintText="Last Name" id="last_name"></TextField>
		        </View>
		        
		        
				<View class="small_container-1" id="fifth">
		         	<Label text="\uf0e0" class="icon_in_text font-icon"></Label>
		       	    <TextField class="input gautum" hintText="Email" id="email"></TextField>
		         </View>
		         		        
		         <View class="small_container-1" id="third">
		         	<Label text="\uf023 " class="icon_in_text font-icon"></Label>
		       	    <TextField class="input gautum" hintText="Password" id="password" passwordMask="true"></TextField>
		         </View>
		         
		         <View class="small_container-1" id="fourth">
		         	<Label text="\uf13e" class="icon_in_text font-icon"></Label>
		       	    <TextField class="input gautum" hintText="Confirm Password" id="re_password" passwordMask="true"></TextField>
		         </View>
		         
 				<View class="radio_container" id="seventh">
 					<!-- <view class="tocenetr"> -->
 					<Label id="gender_value" visible="false"></Label>
 					<View class="tocenetr">
		         	<Label class="gender gautum" left="2%">Gender</Label>
		         	 <View onClick="toggle" class="gender-radio" left="15">
		         	 	<Label text="\uf1db" class="font-icon icon_in_text" id="male" onClick="toggle" left="20%"></Label>
		         	 	<Label class="labels gautum">Male</Label>
		         	 </View>
		         	 
		         	 <View onClick="toggle" class="gender-radio">
		         	 	<Label text="\uf1db" class="font-icon icon_in_text" id="female" onClick="toggle"></Label>
		         	 	<Label class="labels gautum">Female</Label>
		         	 </View>
		         	</View>
		         </View>		         
		         
		         
		         <View class="small_container-1" id="sixth" top="0">
		         	<Label text="\uf098 " class="icon_in_text font-icon"></Label>
		       	    <TextField class="input gautum" hintText="Phone Number" id="phone_number" keyboardType="Titanium.UI.KEYBOARD_TYPE_NUMBER_PAD"></TextField>
		         </View>
		         
		        	
		         		      		         
		         <View class="radio_container" id="eight">
		         	 <View class="terms_condition" onClick="termselect" >
		         	 	<Label text="\uf096" class="font-icon icon_in_text" id="terms"></Label>
		         	 	<Label color="white" left="3%" class="gautum"><AttributedString>I agree the Terms & Conditions</AttributedString></Label>
		         	 </View>		         	
		         </View>
		         
		         <View class="radio_container" bottom="0">	         	
		         <Button id="register" onClick="validate" class="gautum"></Button>	
		         </View>
		         </ScrollView>
		         </View>
			
	</Window>
</Alloy>