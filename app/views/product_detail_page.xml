<Alloy>
	<Window id="product_detail">

	<View class="container">
		<Widget src="header" id="product_detail_header"></Widget>
		<ScrollView class="bigview">
	    <Label class="biglabel" id="pro_label1">hi this is a table</Label>
		<Label class="category" id="pro_label2">hi this is a tablefgf</Label>
		<View class="pro_star">
		<Label class="producer" id="pro_producer">hi this is a tablefgf</Label>
	    <View class="star_box">
		<Label bindId="stars1" id="stars1" class="font-icon star_color" text="\uf005"/>
		<Label  id="stars2" class="font-icon star_color" text="\uf005"/>
		<Label id="stars3" class="font-icon star_color" text="\uf005"/>
		<Label  id="stars4" class="font-icon star_color" text="\uf005"/>
		<Label  id="stars5" class="font-icon star_color" text="\uf005"/>
		</View>
		</View>
		<View class="cost">
		<Label class="rupee" id="pro_cost">rs.900000</Label>
		<Label class="font-icon share" text="\uf1e0 "></Label>
		</View>
		<ImageView class="image_big" id="pro_image_big"></ImageView>
		<View class="detail_images">
			<ImageView class="small_image" id="pro_image1"></ImageView>
			<ImageView class="small_image" id="pro_image2"></ImageView>
			<ImageView class="small_image" id="pro_image3" visible="false"></ImageView>
		</View>
		<Label class="describe">DESCRIPTION</Label>
		<Label class="detail" id="pro_detail">Mild Steel Base In Poder Coated White Finish.8 mm Tempered Glass Table Top.Bottom Shelf In Paimted Brown Glas</Label>
		<View class="buttons_view">
			<Button class="custom_button" left="8%" onClick="buy_pop">BUY</Button>
			<Button class="custom_button" left="5%" onClick="popup_rate">RATE</Button>
		</View>
		</ScrollView>
	</View>
	
	
	<!-- for rating -->
	<View class="transperent_view" id="transperent_view1">
	<View id="pop_rating">
		<ScrollView class="just_to-scrool">
		<Label class="name_of_product" id="label_pop"></Label>
		<ImageView class="image_of_product" id="image_of_product"></ImageView>
		<View class="star_rating" id="star_raing_view">
		<Label  id="starschange1" class="font-icon star_pop_color" text="\uf005"/>
		<Label  id="starschange2" class="font-icon star_pop_color" text="\uf005"/>
		<Label  id="starschange3" class="font-icon star_pop_color" text="\uf005"/>
		<Label  id="starschange4" class="font-icon star_pop_color" text="\uf005"/>
		<Label  id="starschange5" class="font-icon star_pop_color" text="\uf005"/>
	    </View>
		<Button onClick="rate_sending" class="custom_button" top="5%">RATE NOW</Button>
		</ScrollView>
	</View>
	</View>
	
	<!-- for buying -->
	<View class="transperent_view" id="transperent_view_buy2">
		 <View class="pop_buy">
		 	<ScrollView class="just_to-scrool">
			 <Label class="label_buy_1" id="label_buy_1">hiiii</Label>
			<ImageView class="image_buy" id="image_buy"></ImageView>
			<Label class="label_buy_2">Enter Qty</Label>
			<TextField class="enter_qty" id="quantity" keyboardType="Titanium.UI.KEYBOARD_TYPE_NUMBER_PAD"></TextField>
			<Button class="buy_button_in_view" onClick="addtocart">SUBMIT</Button> 
			</ScrollView>	
			</View>
		</View>
	</Window>
</Alloy>