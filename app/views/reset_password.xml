<Alloy>
	<Window class="myaccount_window" id="change_password_window">
	<View class="big_view">
		<Widget src="header" id="change_password_header"></Widget>
		<ScrollView class="container">
		<!-- <View class="label_container"> -->
				<Label id="neolabel" class="gautum">NeoSTORE</Label>
			<!-- </View> -->
		
		<View class="small_container-1" id="first" top="20dp">
		       	    <Label text="\uf023" class="icon_in_text font-icon"></Label>
		       	    <TextField class="input gautum" hintText="Current password" id="curr_password" passwordMask="true"></TextField>
		         </View>	
		       
		        <View class="small_container-1" id="second">
		        	<Label text="\uf13e" class="icon_in_text font-icon"></Label>
		       	    <TextField class="input gautum" hintText="New password" id="new_password" passwordMask="true"></TextField>
		        </View>
		        
		        
				<View class="small_container-1" id="fifth">
		         	<Label text="\uf023" class="icon_in_text font-icon"></Label>
		       	    <TextField class="input gautum" hintText="Confirm password" id="conf_password" passwordMask="true"></TextField>
		         </View>
		         
		         
		         
		         <Button id="register" class="gautum" onClick="reset" ></Button>
		        
		</ScrollView>         
	</View>
	</Window>
</Alloy>